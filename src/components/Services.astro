    }

    .card .content .details {
      padding: 20px 20px;
      text-align: center;
      width: 100%;
      transition: 0.5s;
      transform: translateY(145px);
    }

    .card:hover .content .details,
    .card.open .content .details {
      transform: translateY(-30px);
    }

    .card .content .details ul {
