    }

    .gradient-text {
      background: linear-gradient(to bottom, #ffffff, #a2a2a2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;
    }

    .container {
      position: relative;
      display: flex;
      padding: 80px 40px;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 80px;
      /* background-color: ; */
    }

    .card {
      position: relative;
      width: 390px;
      height: 180px; /* Adjusted to provide space for title and icon */
      background: #fff;
      transition: height 0.5s;
    }

    .card:hover {
      height: 450px;
    }

    .card.open {
      height: 450px;
    }

    .card .lines {
      position: absolute;
      inset: 0;
      background: #000;
      overflow: hidden;
    }

    .card .lines::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 600px;
      height: 120px;
      background: linear-gradient(
        transparent,
        #ff1f71,
        #ff1f71,
        #ff1f71,
        transparent
      );
      animation: animate 4s linear infinite;
      animation-play-state: paused;
    }

    .card:hover .lines::before,
    .card.open .lines::before {
      animation-play-state: running;
    }

    @keyframes animate {
      0% {
        transform: translate(-50%, -50%) rotate(0deg);
      }
      100% {
        transform: translate(-50%, -50%) rotate(360deg);
      }
    }

    .card .lines::after {
      content: "";
      position: absolute;
      inset: 3px;
      background: #292929;
    }

    .card .imgBx {
      position: absolute;
      top: -60px;
      left: 50%;
      height: 130px;
      width: 140px;
      transform: translateX(-50%);
      background: #000;
      transition: 0.5s;
      z-index: 10; /* Adjust z-index to keep it above other elements */
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card:hover .imgBx,
    .card.open .imgBx {
      top: 25px;
      width: 160px;
      height: 160px;
    }

    .card .imgBx::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 500px;
      height: 150px;
      transform: translate(-50%, -50%);
      background: linear-gradient(
        transparent,
        transparent,
        #ffffff,
        transparent,
        transparent
      );
      animation: animate2 6s linear infinite;
      animation-play-state: paused;
    }

    .card:hover .imgBx::before,
    .card.open .imgBx::before {
      animation-play-state: running;
    }

    @keyframes animate2 {
      0% {
        transform: translate(-50%, -50%) rotate(360deg);
      }
      100% {
        transform: translate(-50%, -50%) rotate(0deg);
      }
    }

    .card .imgBx::after {
      content: "";
      position: absolute;
      inset: 3px;
      background: #292929;
    }

    .card .imgBx img {
      position: absolute;
      width: 130px;
      height: 130px;
      z-index: 1;
      /* filter: invert(1); */
      opacity: 0.5;
      transition: 0.5s;
    }

    .card:hover .imgBx img,
    .card.open .imgBx img {
      opacity: 1;
    }

    .card-title {
      position: absolute;
      top: 100px; /* Adjust this value to move the title up or down */
      left: 50%;
      transform: translateX(-50%);
      z-index: 2; /* Ensure title is above other elements */
      width: 100%;
      text-align: center;
      transition: top 0.5s;
    }

    .card:hover .card-title,
    .card.open .card-title {
      top: -52px; /* Adjust this value to place between the image and the list */
      font-size: 1.3em;
    }

    .card-title h2 {
      font-size: 2em;
      font-weight: 500;
      color: #ff1f71;
      line-height: 1.2em;
      /*margin-bottom: 20px; /* Add margin to prevent overlap with list */
    }

    .card .content {
      position: absolute;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: center;
      overflow: hidden;
      z-index: 1; /* Adjust z-index */
