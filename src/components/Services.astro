  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap");

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }
    .title {
      font-size: 5rem;
      margin-bottom: 2rem;
      text-align: center;
      width: 100%;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add shadow to the text */
      margin-top: -70px;
    }

    .gradient-text {
      background: linear-gradient(to bottom, #ffffff, #a2a2a2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;
    }

    .container {
      position: relative;
      display: flex;
      padding: 80px 40px;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 80px;
    }

    .card {
      position: relative;
      width: 350px;
      height: 180px;
      background: #fff;
      transition: 0.5s;
    }

    .card:hover {
      height: 450px;
    }

    .card.open {
      height: 450px;
    }

    .card .lines {
      position: absolute;
      inset: 0;
      background: #000;
      overflow: hidden;
    }

    .card .lines::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 600px;
      height: 120px;
      background: linear-gradient(transparent, #ff1f71, #ff1f71, #ff1f71, transparent);
      animation: animate 4s linear infinite;
      animation-play-state: paused;
    }

    .card:hover .lines::before,
    .card.open .lines::before {
      animation-play-state: running;
    }

    @keyframes animate {
      0% {
        transform: translate(-50%, -50%) rotate(0deg);
      }
      100% {
        transform: translate(-50%, -50%) rotate(360deg);
      }
    }

    .card .lines::after {
      content: "";
      position: absolute;
      inset: 3px;
      background: #292929;
    }

    .card .imgBx {
      position: absolute;
      top: -60px;
      left: 50%;
      height: 150px;
      width: 150px;
      transform: translateX(-50%);
      background: #000;
      transition: 0.5s;
      z-index: 10;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card:hover .imgBx,
    .card.open .imgBx {
      top: 25px;
      width: 200px;
      height: 200px;
    }

    .card .imgBx::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 500px;
      height: 150px;
      transform: translate(-50%, -50%);
      background: linear-gradient(transparent, transparent, #ffffff, transparent, transparent);
      animation: animate2 6s linear infinite;
      animation-play-state: paused;
    }

    .card:hover .imgBx::before,
    .card.open .imgBx::before {
      animation-play-state: running;
    }

    @keyframes animate2 {
      0% {
        transform: translate(-50%, -50%) rotate(360deg);
      }
      100% {
        transform: translate(-50%, -50%) rotate(0deg);
      }
    }

    .card .imgBx::after {
      content: "";
      position: absolute;
      inset: 3px;
      background: #292929;
    }

    .card .imgBx img {
      position: absolute;
      width: 140px;
      z-index: 1;
      /* filter: invert(1); */
      opacity: 0.5;
      transition: 0.5s;
    }

    .card:hover .imgBx img,
    .card.open .imgBx img {
      opacity: 1;
    }

    .card .content {
      position: absolute;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: flex-end;
      overflow: hidden;
    }

    .card .content .details {
      padding: 30px 20px;
      text-align: center;
      width: 100%;
      transition: 0.5s;
      transform: translateY(145px);
    }

    .card:hover .content .details,
    .card.open .content .details {
      transform: translateY(0px);
    }

    .card .content .details h2 {
      font-size: 1.5em;
      font-weight: 500;
      color: #ff1f71;
      line-height: 1.2em;
    }

    .card .content .details p {
      color: #fff;
      opacity: 0;
      transition: 0.5s;
    }

    .card:hover .content .details p,
    .card:hover .content .details a,
    .card.open .content .details p,
    .card.open .content .details a {
      opacity: 1;
    }

    .card .content .details a {
      display: inline-block;
      padding: 8px 15px;
      background: #ff1f71;
      color: #292929;
      margin-top: 10px;
      font-weight: 500;
      text-decoration: none;
      opacity: 0;
      transition: 0.5s;
    }

    /* Media query for smaller screens */
    @media (max-width: 900px) {
      .title {
        font-size: 3.5rem; /* Decrease font size on mobile */
