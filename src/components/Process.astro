---
const steps = [
  { title: "Contact", description: "Initial contact with the client to understand their needs." },
  { title: "Consultation", description: "Detailed consultation to gather requirements and discuss potential solutions." },
  { title: "Analysis", description: "In-depth analysis of the client's business and market to develop a tailored strategy." },
  { title: "Implementation", description: "Execution of the strategy with continuous monitoring and optimization." },
];
---

<section class="timeline-section">
  <h2 class="section-title">Our Process</h2>
  <div class="timeline">
    {steps.map((step, index) => (
      <div class={`timeline-item ${index % 2 === 0 ? 'left' : 'right'}`}>
        <div class="timeline-content">
          <h3>{step.title}</h3>
          <p>{step.description}</p>
        </div>
      </div>
    ))}
  </div>
  <div class="cta-section">
    <h3 class="cta-text">Ready to Start?</h3>
    <div class="cta-button-container">
      <a href="#contact">Book a Consultation</a>
    </div>
  </div>
</section>

<style>
  /* * {
  outline: 5px solid rgb(0, 172, 172) !important;
} */
  body, button {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  .timeline-section {
    padding: 50px 0;
    background-color: #111;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .section-title {
    font-size: 4.5rem;
    margin-bottom: 30px;
    background: linear-gradient(135deg, #e0e0e0, #606060, #e0e0e0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    text-align: center;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 3.8rem;
    }
  }

  .timeline {
    position: relative;
    width: 80%;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: #e0e0e0;
  }

  .timeline-item {
    position: relative;
    width: 50%;
    padding: 20px 40px;
    box-sizing: border-box;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
    /*border: 0.1px solid; /* Set the width of the border */
  }

  .timeline-item.left {
    left: 0;
  }

  .timeline-item.right {
    left: 50%;
  }

  .timeline-item.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    top: 25px;
    right: -15px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: #e0e0e0;
    border: 2px solid #111;
    animation: pulse 1.5s infinite;
  }

  .timeline-item.right::before {
    left: -15px;
  }

  .timeline-content {
    padding: 15px;
    /* margin-top: 60px; */
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    position: relative;
    transform: translateX(-20px);
    transition: transform 0.6s ease;
    border: 1px solid; /* Set the width of the border */
  }

  .timeline-item.right .timeline-content {
    transform: translateX(20px);
  }

  .timeline-item.visible .timeline-content {
    transform: translateX(0);
  }

  .timeline-content h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
    margin-top: 10px;
    color: #ff1f71;
  }

  .timeline-content p {
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .timeline::before {
      left: 20px;
    }

    .timeline-item {
      width: 100%;
      padding-left: 60px;
      padding-right: 20px;
    }

    .timeline-item.right {
      left: 0;
    }

    .timeline-item::before {
      top: 20px;
      right: auto;
      left: 15px;
    }

    .timeline-item.right::before {
      left: 15px;
    }

    .timeline-content {
      transform: translateX(0);
      transition: transform 0.6s ease, opacity 0.6s ease;
    }

    .timeline-item.right .timeline-content {
      transform: translateX(0);
    }
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .cta-section {
    margin-top: 50px;
    text-align: center;
  }

  .cta-text {
    font-size: 3rem;
    margin-bottom: 20px;
    background: linear-gradient(135deg, #e0e0e0, #606060, #e0e0e0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .cta-button-container {
    position: relative;
    width: 250px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
  }

  .cta-button-container a {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 15px 15px rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 10px;
    letter-spacing: 1px;
    text-decoration: none;
    overflow: hidden;
    color: #fff;
    font-weight: 400;
    z-index: 1;
    transition: 0.5s;
    backdrop-filter: blur(15px);
  }

  .cta-button-container:hover a {
    letter-spacing: 3px;
    transition: 0.5s;
  }

  .cta-button-container a::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    background: linear-gradient(to left, rgba(255, 255, 255, 0.15), transparent);
    transform: skewX(45deg) translate(0);
    transition: 0.5s;
    filter: blur(0px);
  }

  .cta-button-container:hover a::before {
    transform: skewX(45deg) translate(200px);
    transition: 0.5s;
  }

  .cta-button-container::before {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -28px;
    width: 30px;
    height: 10px;
    background: #ff1f71;
    border-radius: 10px;
    transition: 0.2s;
    transition-delay: 0.2s;
    box-shadow: 0 0 15px #ff1f71;
  }

  .cta-button-container:hover::before {
    margin-bottom: 5px;
    height: 100%;
    width: 80%;
    border-radius: 30px;
    box-shadow: 0 0 65px #ff1f71;
  }

  .cta-button-container::after {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -5px;
    width: 30px;
    height: 10px;
    background: #ff1f71;
    border-radius: 10px;
    transition: 0.2s;
    transition-delay: 0.2s;
    box-shadow: 0 0 15px #ff1f71;
  }

  .cta-button-container:hover::after {
    top: 0;
    height: 100%;
    width: 80%;
    border-radius: 30px;
    box-shadow: 0 0 65px #ff1f71;
  }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('.timeline-item');

    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        } else {
          entry.target.classList.remove('visible');
        }
      });
    }, {
      threshold: 0.1
    });

    items.forEach(item => {
      observer.observe(item);
    });

    // Handle button click for mobile
    const ctaButton = document.querySelector('.cta-button-container a');
    if (!ctaButton) return;

    ctaButton.addEventListener('click', (event) => {
      if (window.innerWidth <= 1024) {
        event.preventDefault();
        if (ctaButton) {
          ctaButton.classList.add('hover');
          setTimeout(() => {
            const href = ctaButton.getAttribute('href');
            if (href) {
              window.location.href = href;
            }
          }, 500); // Adjust the timing as needed
        }
      }
    });
  });

</script>
