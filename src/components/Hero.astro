    <title>Hero Section</title>
    <style>
        body, .hero-section, .hero-text, .typewriter-container, .cta-button-container a {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .hero-section {
            display: grid;
            grid-template-rows: 1fr auto 1fr;
            place-items: center;
            min-height: 100vh;
            text-align: center;
            color: #fff;
            background: #000;
            position: relative;
            overflow: hidden;
        }

        .matrix-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            background: #000;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .matrix-bg canvas {
            display: block;
            width: 100%;
            height: 100%;
        }

        .glowing-ring {
            position: relative;
            width: 50vw;
            height: 50vw;
            max-width: 600px;
            max-height: 600px;
            border-radius: 50%;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.5), 0 0 30px rgba(255, 255, 255, 0.4), 0 0 40px rgba(255, 255, 255, 0.3), 0 0 50px rgba(255, 255, 255, 0.2);
            display: flex;
            justify-content: center;
            align-items: center;
            animation: glow 2s infinite alternate;
            border: 2px solid white; /* Added border to see the element area */
            z-index: 1; /* Ensure ring is above the canvas */
        }

        .glowing-dot {
            width: 10vw;
            height: 10vw;
            max-width: 80px;
            max-height: 80px;
            border-radius: 50%;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5), 0 0 20px rgba(255, 255, 255, 0.4), 0 0 30px rgba(255, 255, 255, 0.3);
            border: 2px solid white; /* Added border to see the element area */
        }

        @keyframes glow {
            0% {
                box-shadow: 0 0 20px rgba(255, 255, 255, 0.5), 0 0 30px rgba(255, 255, 255, 0.4), 0 0 40px rgba(255, 255, 255, 0.3), 0 0 50px rgba(255, 255, 255, 0.2);
            }
            100% {
                box-shadow: 0 0 40px rgba(255, 255, 255, 0.7), 0 0 60px rgba(255, 255, 255, 0.6), 0 0 80px rgba(255, 255, 255, 0.5), 0 0 100px rgba(255, 255, 255, 0.4);
            }
        }

        .hero-text {
            font-size: 6vw;
            max-font-size: 2rem;
            /* border: 2px solid white; Added border to see the element area */
            z-index: 1; /* Ensure text is above the canvas */
        }

        .typewriter-container {
            display: inline-block;
            position: relative;
            vertical-align: middle;
            line-height: 1.5;
            /* border: 0.01px solid white; Added border to see the element area */
            z-index: 1; /* Ensure text is above the canvas */
        }

        .typewriter {
            display: inline-block;
            overflow: hidden;
            white-space: nowrap;
            text-align: left;
            min-width: 8ch;
            vertical-align: middle;
            line-height: 1;
            /* border: 0.02px solid white; Added border to see the element area */


        }

        #typewriter::after {
            content: '|';
            animation: blink 0.7s infinite;
            vertical-align: middle;
            line-height: 1.9;
        }

        @keyframes blink {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0;
            }
        }

        .cta-button-container {
            position: relative;
            width: 70vw;
            height: 10vw;
            max-width: 300px;
            max-height: 500px;
            display: flex;
            justify-content: center;
            align-items: center;
            /* border: 20px solid white;  */
            z-index: 1; /* Ensure button is above the canvas */
            margin-bottom: 10vh;
        }

        .cta-button-container a {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: rgba(255, 255, 255, 0.05);
            box-shadow: 0 15px 15px rgba(0, 0, 0, 0.3);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 30px;
            padding: 10px;
            letter-spacing: 1px;
            text-decoration: none;
            overflow: hidden;
            color: #fff;
            font-weight: 500;
            z-index: 1;
            transition: 0.5s;
            backdrop-filter: blur(15px);
        }

        .cta-button-container:hover a {
            letter-spacing: 3px;
        }

        .cta-button-container a::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 50%;
            height: 100%;
            background: linear-gradient(to left, rgba(255, 255, 255, 0.15), transparent);
            transform: skewX(45deg) translate(0);
            transition: 0.5s;
            filter: blur(0px);
        }

        .cta-button-container:hover a::before {
            transform: skewX(45deg) translate(200px);
        }

        .cta-button-container::before {
            content: "";
            position: absolute;
            left: 50%;
            transform: translatex(-50%);
            bottom: -5px;
            width: 30px;
            height: 10px;
            background: #ff1f71;
            border-radius: 10px;
            transition: 0.5s;
            transition-delay: 0.5s;
        }

        .cta-button-container:hover::before {
            bottom: 0;
            height: 50%;
            width: 80%;
            border-radius: 30px;
        }

        .cta-button-container::after {
            content: "";
            position: absolute;
            left: 50%;
            transform: translatex(-50%);
            top: -5px;
            width: 30px;
            height: 10px;
            background: #ff1f71;
            border-radius: 10px;
            transition: 0.5s;
            transition-delay: 0.5s;
        }

        .cta-button-container:hover::after {
            top: 0;
            height: 50%;
            width: 80%;
            border-radius: 30px;
        }

