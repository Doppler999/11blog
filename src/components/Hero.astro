<body>
    <div class="hero-section">
        <div class="matrix-bg" id="matrix-bg">
            <canvas id="matrixCanvas"></canvas>
        </div>
        <div class="card-container">
            <div class="card glowing-ring-container">
                <div class="glowing-ring">
                    <div class="glowing-dot"></div>
                </div>
            </div>
            <div class="card hero-text">
                <h1>We are here to help you: <span class="typewriter-container"><span class="typewriter" id="typewriter"></span></span></h1>
            </div>
            <div class="cta-button-container">
                <a href="#contact" id="cta-button">Contact Us</a>
            </div>
        </div>
    </div>

    <script defer>
        const words = ["grow", "improve", "manifest"];
        let i = 0;
        let j = 0;
        let currentWord = "";
        let isDeleting = false;
        const typewriterElement = document.getElementById('typewriter');

        function type() {
            const speed = isDeleting ? 100 : 200;
            const word = words[i];

            if (!isDeleting && j < word.length) {
                currentWord += word.charAt(j);
                j++;
                typewriterElement.textContent = currentWord;
            } else if (isDeleting && j > 0) {
                currentWord = word.substring(0, j - 1);
                j--;
                typewriterElement.textContent = currentWord;
            } else if (!isDeleting && j === word.length) {
                isDeleting = true;
                setTimeout(type, 1000);
                return;
            } else if (isDeleting && j === 0) {
                isDeleting = false;
                i = (i + 1) % words.length;
                currentWord = "";
            }

            setTimeout(type, speed);
        }

        function adjustTypewriterWidth() {
            const longestWord = words.reduce((a, b) => a.length > b.length ? a : b);
            typewriterElement.style.minWidth = `${longestWord.length}ch`;
        }

        type();
        adjustTypewriterWidth();

        window.addEventListener('resize', adjustTypewriterWidth);

        const canvas = document.getElementById('matrixCanvas');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const matrix = '$$$$$$$$$$0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ';
        const font_size = 1;
        const columns = Math.floor(canvas.width / font_size);

        const drops = Array(columns).fill(1);

        let speed = 50;
        let lastFrameTime = 0;

        function drawMatrix(timestamp) {
            if (timestamp - lastFrameTime < speed) {
                requestAnimationFrame(drawMatrix);
                return;
            }
            lastFrameTime = timestamp;

            ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#FFFFFF';
            ctx.font = `${font_size}px arial`;

            drops.forEach((y, x) => {
                const text = matrix.charAt(Math.floor(Math.random() * matrix.length));
                const posX = x * font_size;
                const posY = y * font_size;

                ctx.fillText(text, posX, posY);

                if (posY > canvas.height && Math.random() > 0.975) {
                    drops[x] = 0;
                }

                drops[x]++;
            });

            requestAnimationFrame(drawMatrix);
        }

        requestAnimationFrame(drawMatrix);

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            const columns = Math.floor(canvas.width / font_size);
            drops.length = columns;
            drops.fill(1);
        });

        document.getElementById('cta-button').addEventListener('click', function(event) {
            if (window.innerWidth <= 1024) {
                event.preventDefault();
                this.classList.add('animate');

                setTimeout(() => {
                    window.location.href = '#contact';
                }, 500);
            }
        });
    </script>
