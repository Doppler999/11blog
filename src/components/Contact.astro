<section id="contact" class="contact-section">
  <h2 class="section-title">Contact Us</h2>
  <p class="connect-text">Connect with Us: Let's Discuss Your Digital Marketing Needs</p>
  <div class="contact-container">
    <form id="contact-form" class="contact-form">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>
      <div class="cta-button">
        <button type="submit">Send Message</button>
      </div>
    </form>
  </div>
</section>

<style>
  .contact-section {
    padding: 50px 0;
    background-color: #111;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 80px;
    margin-top: 10px;
  }

  .section-title {
    font-size: 3.5rem;
    margin-bottom: 20px;
    background: linear-gradient(135deg, #e0e0e0, #606060, #e0e0e0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    text-align: center;
  }

  .connect-text {
    font-size: 1.2rem;
    margin-bottom: 30px;
    text-align: center;
    color: #ccc;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 3.5rem;
    }

    .connect-text {
      font-size: 1rem;
    }

  }

  .contact-container {
    width: 90%;
    max-width: 900px;
    /* height: 450px; */
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    padding: 20px;

    box-shadow: 0 15px 15px rgba(0, 0, 0, 0.3);
    /* margin-left: 20px;
    margin-right: 20px; */
  }

  .contact-form {
    display: flex;
    flex-direction: column;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-size: 1rem;
  }

  .form-group input,
  .form-group textarea {
    width: 98%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.2);
    color: #fff;
    font-size: 1rem;
    resize: none;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.3);
  }

  .cta-button {
    position: relative;
    width: 100%;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }

  .cta-button button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 15px 15px rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 10px;
    letter-spacing: 1px;
    text-decoration: none;
    overflow: hidden;
    color: #fff;
    font-weight: 400;
    z-index: 1;
    transition: 0.5s;
    backdrop-filter: blur(15px);
    cursor: pointer;
    border: none;
  }

  .cta-button button:hover {
    letter-spacing: 3px;
    transition: 0.5s;
  }

  .cta-button button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    background: linear-gradient(to left, rgba(255, 255, 255, 0.15), transparent);
    transform: skewX(45deg) translate(0);
    transition: 0.5s;
    filter: blur(0px);
  }

  .cta-button button:hover::before {
    transform: skewX(45deg) translate(200px);
    transition: 0.5s;
  }

  .cta-button::before {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -5px;
    width: 30px;
    height: 10px;
    background: #ff1f71;
    border-radius: 10px;
    transition: 0.5s;
    transition-delay: 0.5s;
    box-shadow: 0 0 15px #ff1f71;
  }

  .cta-button:hover::before {
    bottom: 0;
    height: 50%;
    width: 80%;
    border-radius: 30px;
    box-shadow: 0 0 25px #ff1f71;
  }

  .cta-button::after {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -5px;
    width: 30px;
    height: 10px;
    background: #ff1f71;
    border-radius: 10px;
    transition: 0.5s;
    transition-delay: 0.5s;
    box-shadow: 0 0 15px #ff1f71;
  }

  .cta-button:hover::after {
    top: 0;
    height: 50%;
    width: 80%;
    border-radius: 30px;
    box-shadow: 0 0 25px #ff1f71;
  }

  @media (min-width: 1024px) {
    .contact-container{
      width: 8%;
    max-width: 900px;
    }
    .form-group input,
  .form-group textarea {
    width: 9%;
