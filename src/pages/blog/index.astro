---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      :global(body) {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Liberation Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
        background: #ffffff;
        color: #333;
      }

      main {
        width: 960px;
        margin: auto;
        padding: 3em 1em;
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      ul li {
        width: calc(50% - 1rem);
      }

      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }

      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }

      ul li:first-child img {
        width: 100%;
      }

      ul li:first-child .title {
        font-size: 2.369rem;
      }

      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }

      ul li a {
        display: block;
      }

      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }

      .date {
        margin: 0;
        color: rgb(var(--gray));
      }

      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }

      ul a:hover img {
        box-shadow: var(--box-shadow);
      }

      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }

        ul li {
          width: 100%;
          text-align: center;
        }

        ul li:first-child {
          margin-bottom: 0;
        }

        ul li:first-child .title {
          font-size: 1.563em;
        }
      }

      .header-wrapper {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 400px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.9));
        overflow: hidden;
      }

      .sonar-wrapper {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .sonar {
        position: absolute;
        width: 90px;
        height: 90px;
        border-radius: 50%;
        border: 0.25px solid rgb(0, 255, 85); /* Thinner and brighter border */
        background: rgba(0, 0, 0, 0.1);
        animation: sonar-animation 10s linear infinite;
      }

      .sonar:nth-child(1) { animation-delay: 0s; }
      .sonar:nth-child(2) { animation-delay: 1s; }
      .sonar:nth-child(3) { animation-delay: 2s; }
      .sonar:nth-child(4) { animation-delay: 3s; }
      .sonar:nth-child(5) { animation-delay: 4s; }
      .sonar:nth-child(6) { animation-delay: 5s; }
      .sonar:nth-child(7) { animation-delay: 6s; }
      .sonar:nth-child(8) { animation-delay: 7s; }
      .sonar:nth-child(9) { animation-delay: 8s; }
      .sonar:nth-child(10) { animation-delay: 9s; }
      .sonar:nth-child(11) { animation-delay: 10s; }

      @keyframes sonar-animation {
        0% {
          transform: scale(0.5);
          opacity: 1;
        }
        100% {
          transform: scale(11);
          opacity: 0;
        }
      }

      .header-content {
        position: relative;
        background: rgba(255, 255, 255, 0.02); /* Increased transparency */
        backdrop-filter: blur(20px); /* Increased blur effect */
        -webkit-backdrop-filter: blur(20px);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        z-index: 1; /* Ensure content is above lines */
      }

      .title {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-size: 2.7rem; /* Responsive font size */
      }

      .subtitle {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: rgba(33, 33, 33, 0.7);
        font-size: 1rem;
      }

      .content {
        background: rgba(255, 255, 255, 0.02); /* More transparency */
        backdrop-filter: blur(20px); /* Increased blur effect */
        -webkit-backdrop-filter: blur(20px);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      }

      .text-center {
        text-align: center;
      }

      .max-w-7xl {
        max-width: 80rem;
      }

      .mx-auto {
        margin-left: auto;
        margin-right: auto;
      }

      .px-4 {
        padding-left: 1rem;
        padding-right: 1rem;
      }

      .py-8 {
        padding-top: 2rem;
        padding-bottom: 2rem;
      }

      .py-16 {
        padding-top: 4rem;
        padding-bottom: 4rem;
      }

      .text-5xl {
        font-size: 3rem;
      }

      .text-lg {
        font-size: 1.125rem;
      }

      .font-bold {
        font-weight: 700;
      }

      .mb-4 {
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <header class="header-wrapper">
      <div class="sonar-wrapper">
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
        <div class="sonar"></div>
      </div>
      <div class="header-content text-center py-24">
        <h1 class="title text-6xl font-bold mb-4">Our Blog</h1>
        <p class="subtitle text-xl text-gray-600 dark:text-gray-300">Welcome to our blog. Here you can find the latest posts.</p>
      </div>
    </header>
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <img width={720} height={360} src={post.data.heroImage} alt="" />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>

